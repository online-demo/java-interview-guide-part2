<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="logFactoryBean" class="com.example.java.interview.guide.part2.factorybean.LogFactoryBean">
        <property name="interfaceName" value="com.example.java.interview.guide.part2.factorybean.HelloWorldService"/>
        <property name="invocationHandler" ref="logInvocationHandler"/>
    </bean>

    <bean id="helloWordService" class="com.example.java.interview.guide.part2.factorybean.HelloWorldServiceImpl"/>

    <bean id="logInvocationHandler" class="com.example.java.interview.guide.part2.factorybean.LogInvocationHandler">
        <constructor-arg ref="helloWordService"/>
    </bean>
</beans>